<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal"
        >

        <Button
            ohos:id="$+id:start_locate"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_button"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="24vp"
            ohos:padding="10vp"
            ohos:right_margin="24vp"
            ohos:text="$string:mainability_start_locate"
            ohos:text_alignment="left"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"
            />

        <Button
            ohos:id="$+id:stop_locate"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_button"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="24vp"
            ohos:padding="10vp"
            ohos:right_margin="24vp"
            ohos:text="$string:mainability_stop_locate"
            ohos:text_alignment="right"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"
            />
    </DirectionalLayout>

    <Text
        ohos:height="35vp"
        ohos:width="match_parent"
        ohos:text="$string:mainability_locate_information"
        ohos:text_alignment="center"
        ohos:text_size="16fp"
        ohos:top_margin="10vp"
        />
    <Text
        ohos:height="120vp"
        ohos:id="$+id:text_location_info"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:text_size="16fp"
        ohos:multiple_lines="true"
        />

    <Text
        ohos:width="match_parent"
        ohos:height="35vp"
        ohos:text="$string:mainability_location_information"
        ohos:text_alignment="center"
        ohos:text_size="16fp"
        ohos:top_margin="20vp"
        />
    <Text
        ohos:id="$+id:geo_address_info"
        ohos:height="120vp"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:text_size="16fp"
        ohos:multiple_lines="true"
        />

    <Image
        ohos:id="$+id:compass_img"
        ohos:height="200vp"
        ohos:width="200vp"
        ohos:top_margin="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:image_src="$media:compass"
        />

    <Text
        ohos:id="$+id:compass_angle_text"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:text_size="20fp"
        ohos:layout_alignment="horizontal_center"
        />

</DirectionalLayout>